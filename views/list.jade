extends layout

block headScript

block content
	h1
		+fa('search', 'List')
	
	each item in items
		div
			strong
				+fa(icons[item.type], item.name)
			|   |  
			span.state #{item.state}				
			|   |  
			if item.state === 'wanted'
				a(href='/changeState?id=' + item._id + '&state=wanted') Try search now
			if item.state === 'subtitled'
				span Change state to 
				a(href='/changeState?id=' + item._id + '&state=downloaded') Downloaded
				| &nbsp
				a(href='/changeState?id=' + item._id + '&state=wanted') Wanted
			if item.state === 'renameFailed'
				span Change state to 
				a(href='/changeState?id=' + item._id + '&state=wanted') Wanted
				| &nbsp;or&nbsp;
				a(href='/changeState?id=' + item._id + '&state=downloaded') Retry rename
			if item.state === 'subtitlerFailed'
				span Change state to 
				a(href='/changeState?id=' + item._id + '&state=wanted') Wanted
				| &nbsp;or&nbsp;
				a(href='/changeState?id=' + item._id + '&state=renamed') Retry subtitle search
				| &nbsp;or&nbsp;
				a(href='/changeState?id=' + item._id + '&state=finished') Set as finished				